{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Table Demo (Managed)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dev-server.js",
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Run Table Demo (Direct)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "example"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}