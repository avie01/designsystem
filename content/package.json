{
  "name": "@odl/design-system",
  "version": "1.0.0",
  "description": "ODL Design System - A comprehensive React component library for building modern, accessible web applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "sideEffects": [
    "*.css",
    "./src/styles/**/*"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:analyze": "cross-env NODE_ENV=production ANALYZE=true rollup -c && npm run analyze:open",
    "build:stats": "cross-env NODE_ENV=production rollup -c && npm run stats:open",
    "dev:build": "rollup -c -w",
    "prebuild": "npm run clean && npm run type-check",
    "postbuild": "npm run size-check",
    "clean": "rimraf dist",
    "size-check": "bundlesize",
    "analyze:open": "open dist/stats.html",
    "stats:open": "open dist/stats.html",
    "dev": "vite",
    "start": "node simple-express-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "playwright:install": "playwright install",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check:inline-styles": "node check-inline-styles.js",
    "check:inline-styles:verbose": "node check-inline-styles.js --verbose"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "ui-library",
    "odl",
    "accessible",
    "wcag",
    "typescript"
  ],
  "author": "ODL Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/odl/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/odl/design-system/issues"
  },
  "homepage": "https://github.com/odl/design-system#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "dependencies": {
    "@carbon/icons-react": "^11.64.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid": "^8.11.3",
    "@mui/x-tree-view": "^8.11.3",
    "@tiptap/extension-placeholder": "^3.2.0",
    "@tiptap/extension-text-style": "^3.2.0",
    "@tiptap/react": "^3.2.0",
    "@tiptap/starter-kit": "^3.2.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "react-colorful": "^5.6.1",
    "react-router-dom": "^7.8.0",
    "react-window": "^1.8.11",
    "recharts": "^3.1.2",
    "split-pane-react": "^0.1.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@playwright/mcp": "^0.0.33",
    "@playwright/test": "^1.54.2",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-a11y": "^9.1.16",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-onboarding": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "bundlesize": "^0.18.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-storybook": "^9.1.8",
    "express": "^4.21.2",
    "pa11y": "^9.0.0",
    "parcel": "^2.15.4",
    "playwright": "^1.54.2",
    "postcss": "^8.4.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "storybook": "^9.1.8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2"
  }
}
