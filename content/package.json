{
  "name": "@odl/design-system",
  "version": "1.0.0",
  "description": "ODL Design System - A comprehensive React component library",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:analyze": "cross-env NODE_ENV=production ANALYZE=true rollup -c && npm run analyze:open",
    "build:stats": "cross-env NODE_ENV=production rollup -c && npm run stats:open",
    "dev:build": "rollup -c -w",
    "prebuild": "npm run clean && npm run type-check",
    "postbuild": "npm run size-check",
    "clean": "rimraf dist",
    "size-check": "bundlesize",
    "analyze:open": "open dist/stats.html",
    "stats:open": "open dist/stats.html",
    "dev": "vite",
    "start": "node simple-express-server.js",
    "share": "./share-online.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "dev-optimize": "node scripts/dev-optimize.js",
    "performance-check": "node scripts/build-performance.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "ui-library"
  ],
  "author": "ODL Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "bundlesize": "^0.18.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "parcel": "^2.15.4",
    "postcss": "^8.4.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@carbon/icons-react": "^11.64.0",
    "@playwright/mcp": "^0.0.33",
    "@playwright/test": "^1.54.2",
    "@tiptap/extension-placeholder": "^3.2.0",
    "@tiptap/extension-text-style": "^3.2.0",
    "@tiptap/react": "^3.2.0",
    "@tiptap/starter-kit": "^3.2.0",
    "@types/react-window": "^1.8.8",
    "clsx": "^2.1.1",
    "express": "^4.21.2",
    "playwright": "^1.54.2",
    "react-router-dom": "^7.8.0",
    "react-window": "^1.8.11",
    "recharts": "^3.1.2",
    "redact-pii": "^3.4.0",
    "split-pane-react": "^0.1.3"
  }
}
