{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": false,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": false,
    "removeComments": true,
    "stripInternal": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "example/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "src/templates/**/*",
    "src/pages/**/*",
    "products/**/*",
    ".storybook/**/*",
    "node_modules",
    "dist"
  ]
} 